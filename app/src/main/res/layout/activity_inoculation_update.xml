<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.medical.Inoc.InoculationUpdateActivity"
    android:background="@color/white">

    <include
        android:id="@+id/topBarOuter"
        layout="@layout/medical_dailycare_update_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#0AD0D0D0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarOuter">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="태그"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:id="@+id/tag_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <ToggleButton
                                android:id="@+id/toggleButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/togglebtn_check"
                                android:text="DHPPL"
                                android:textColor="@color/medi_tab"
                                android:textOff="DHPPL"
                                android:textOn="DHPPL"
                                android:textSize="13dp" />

                            <ToggleButton
                                android:id="@+id/toggleButton4"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/togglebtn_check"
                                android:text="CVRP"
                                android:textColor="@color/medi_tab"
                                android:textOff="CVRP"
                                android:textOn="CVRP"
                                android:textSize="13dp" />

                            <ToggleButton
                                android:id="@+id/toggleButton8"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/togglebtn_check"
                                android:text="심장사상충"
                                android:textColor="@color/medi_tab"
                                android:textOff="심장사상충"
                                android:textOn="심장사상충"
                                android:textSize="13dp" />

                            <ToggleButton
                                android:id="@+id/toggleButton7"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/togglebtn_check"
                                android:text="광견병"
                                android:textColor="@color/medi_tab"
                                android:textOff="광견병"
                                android:textOn="광견병"
                                android:textSize="13dp" />

                            <ToggleButton
                                android:id="@+id/toggleButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/togglebtn_check"
                                android:text="코로나"
                                android:textColor="@color/medi_tab"
                                android:textOff="코로나"
                                android:textOn="코로나"
                                android:textSize="13dp" />

                            <ToggleButton
                                android:id="@+id/toggleButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/togglebtn_check"
                                android:text="켄넬코프"
                                android:textColor="@color/medi_tab"
                                android:textOff="켄넬코프"
                                android:textOn="켄넬코프"
                                android:textSize="13dp" />

                            <ToggleButton
                                android:id="@+id/toggleButton5"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/togglebtn_check"
                                android:text="백혈병"
                                android:textColor="@color/medi_tab"
                                android:textOff="백혈병"
                                android:textOn="백혈병"
                                android:textSize="13dp" />

                            <ToggleButton
                                android:id="@+id/toggleButton6"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/togglebtn_check"
                                android:text="FID"
                                android:textColor="@color/medi_tab"
                                android:textOff="FID"
                                android:textOn="FID"
                                android:textSize="13dp" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </TableLayout>

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"

                    android:text="접종/구충 날짜"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:paddingHorizontal="10dp"
                    android:ems="10"
                    android:hint="접종/구충 날짜 작성"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="접종/구충 예정일"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:paddingHorizontal="10dp"
                    android:ems="10"
                    android:hint="접종/구충 예정일 작성"
                    android:inputType="date"/>

                <TextView
                    android:id="@+id/text_hosptial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="병원 이름"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextH"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:paddingHorizontal="10dp"
                    android:ems="10"
                    android:hint="병원 이름 작성"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/text_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="메모"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="72dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:paddingHorizontal="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="메모"
                    android:inputType="textMultiLine" />
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

